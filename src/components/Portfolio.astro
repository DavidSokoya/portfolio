---
import Project from './Project.astro';
import { projects } from '../../config/cv.json';
---

<section class="portfolio-section">
    <div class="container">
         <div class="portfolio-grid">
            {projects?.length > 0 ? (
                projects.map((project, index) => (
                    <Project
                        key={index}
                        imageUrl={project.imageUrl}
                        title={project.title}
                        type={project.type}
                        link={project.link}
                    />
                ))
            ) : (
                <p class="no-projects">No projects available at the moment.</p>
            )}
        </div>
    </div>
</section>

<style>
  /* General section styling */
  .portfolio-section {
      /* background-color: var(--background-color, #f9f9f9); */
      padding: 1rem 0;
  }

  /* Container */
  .container {
      width: 100%;
      max-width: 1300px;
      margin: 0 auto;
      text-align: center;
  }

  /* Title Styling */
  .portfolio-title {
      font-size: 2rem;
      font-weight: 600;
      text-transform: capitalize;
  }

  @media (min-width: 1024px) {
      .portfolio-title {
          font-size: 2.5rem;
      }
  }

  /* Description Styling */
  .portfolio-description {
      margin-top: 1rem;
      color: var(--text-offset-color, #666);
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
  }

  /* Portfolio Grid */
  .portfolio-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
      margin-top: 2rem;
  }

  @media (min-width: 768px) {
      .portfolio-grid {
          grid-template-columns: repeat(2, 1fr);
      }
  }

  @media (min-width: 1200px) {
      .portfolio-grid {
          grid-template-columns: repeat(3, 1fr);
      }
  }

  /* No Projects Message */
  .no-projects {
      color: #888;
      font-style: italic;
      grid-column: span 3;
  }




</style>