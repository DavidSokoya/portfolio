---
const { imageUrl, title, type, link } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer">
    <div class="card" style={`background-image: url('${imageUrl}')`}>
        <div class="overlay">
            <h2>{title}</h2>
            <p>{type}</p>
        </div>
    </div>
</a>

<style>
.card {
    overflow: hidden;
    background-size: cover;
    border-radius: 10px;
    cursor: pointer;
    height: 16rem;
    position: relative;
}

.overlay {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 1rem 2rem;
    background-color: rgba(31, 41, 55, 0.6); /* bg-gray-800/60 */
    backdrop-filter: blur(4px);
    opacity: 0;
    transition: opacity 0.7s ease-in-out;
}

.card:hover .overlay {
    opacity: 1;
}

.overlay h2 {
    margin-top: 1rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
}

.overlay p {
    margin-top: 0.5rem;
    font-size: 1.125rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #007bff; /* Adjust as needed */
}
</style>
